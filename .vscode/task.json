{
    "version": "2.0.0",
    "tasks": [{
        "label": "Compile",
        "command": "clang++",
        "args": [
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}.exe",
            "-g",
            "-Wall",
            "-std=c++17"
        ],
        "type": "process",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        }
    }]
}